pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                cleanWs()  // Clean workspace before checkout
                git branch: 'main', url: 'https://github.com/AmeyD090/java_app.git'
            }
        }
        stage('Verify Workspace') {
            steps {
                sh 'pwd'  // Print current directory
                sh 'ls -R'  // List all files in workspace
            }
        }
        stage('Build and Unit Testing') {
            steps {
                sh 'cd SimpleBanking && mvn clean package'  // ✅ Run Maven in `SimpleBanking/`
            }
        }
        stage('Verify Build Artifacts') {
            steps {
                sh 'ls -l SimpleBanking/target/'  // Ensure JAR file is created
            }
        }
        stage('Docker Image Build') {
            steps {
                sh 'docker build -t banking-app:latest -f SimpleBanking/Dockerfile SimpleBanking/'  // ✅ Correct path
            }
        }
    }
}
