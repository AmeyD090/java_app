pipeline {
    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AmeyD090/java_app.git'
            }
        }
        stage('Verify Workspace') {
            steps {
                sh 'ls -R'
            }
        }
        stage('Build and Unit Testing') {
            steps {
                sh 'cd SimpleBanking && mvn clean package'
            }
        }
    }
}
